<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Azure.NETCoreAPI</title>
    <link rel="stylesheet" href="/css/site.css" />
    <style>
        body { font-family: Arial, Helvetica, sans-serif; margin: 0; padding: 0; }
        header { background: #333; color: #fff; padding: 10px 20px; }
        nav a { color: #fff; margin-right: 15px; text-decoration: none; }
        .container { padding: 20px; }
        footer { background: #f2f2f2; padding: 10px 20px; text-align: center; }
    </style>
</head>
<body>
    <header>
        <div class="nav">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="About">About</a>
            <a asp-controller="Home" asp-action="SampleContent">Sample Content</a>
            <a asp-controller="Home" asp-action="Contact">Contact US</a>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer>
        &copy; @DateTime.Now.Year - Azure.NETCoreAPI
    </footer>
</body>
</html>
